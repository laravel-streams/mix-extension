{
    "compileOnSave": true,
    "compilerOptions": {
        "pretty": true,
        "inlineSourceMap": true,
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "importHelpers": true,
        "target": "es6",
        "module": "commonjs",
        "jsx": "preserve",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "resolveJsonModule": true,
        "noImplicitUseStrict": false,
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "../../../node_modules/@types"
        ],
        "lib": [
            "ES2020",
            "scripthost"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "test",
        "dist"
    ]
}
